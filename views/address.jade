extends layout

block content
  div(class="container")
    h2 Add new address info
    form(name="myform",action="/new_address",method="post")
      label Name
      input(type="text",name="name")
      label Address
      input(type="text",name="pswd")
      label Email
      input(type="email",name="email")
      label Phone number
      input(type="text",name="phone")
      label Birhtday
      input(type="Date", name="birhtday")
      br
      input(type="submit",value="Save")
      p #{error}
